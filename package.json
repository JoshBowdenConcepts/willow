{
	"private": true,
	"name": "willow",
	"description": "",
	"type": "module",
	"scripts": {
		"build:tokens": "pnpm --filter tokens build",
		"build:icons": "pnpm --filter icons build",
		"build:components": "pnpm --filter components build",
		"build": "pnpm -r build",
		"build:deps": "pnpm -r --filter '!personal' build",
		"test:tokens": "pnpm --filter tokens test",
		"test:icons": "pnpm --filter icons test",
		"test:components": "pnpm --filter components test",
		"test": "pnpm -r test",
		"dev": "concurrently --kill-others \"pnpm watch:css\" \"pnpm storybook\"",
		"jbc": "pnpm build:deps && pnpm --filter personal dev",
		"watch:css": "pnpm --filter components css",
		"storybook": "pnpm --filter components storybook",
		"changeset": "changeset",
		"lint": "eslint .",
		"lint:fix": "eslint --fix ."
	},
	"keywords": [],
	"author": "Josh Bowden",
	"license": "None",
	"repository": "https://github.com/JoshBowdenConcepts/willow.git",
	"packageManager": "pnpm@10.0.0",
	"devDependencies": {
		"@changesets/cli": "^2.29.1",
		"@eslint/js": "^9.25.1",
		"@typescript-eslint/eslint-plugin": "^8.31.0",
		"@typescript-eslint/parser": "^8.31.0",
		"concurrently": "^9.1.2",
		"eslint": "^9.25.1",
		"eslint-plugin-prettier": "^5.2.6",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"prettier": "^3.5.3",
		"typescript-eslint": "^8.31.0"
	}
}
